module mojo {

[Peer=NativeViewportClient]
interface NativeViewport {
  void Open();
  void Close();
};

[Peer=NativeViewport]
interface NativeViewportClient {
  void DidOpen();

  // Rather than send a uint64, we should send an opaque handle to a GL service.
  void DidCreateGLContext(uint64 gl);
};

}
