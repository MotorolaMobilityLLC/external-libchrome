import "../../public/interfaces/geometry/geometry.mojom"

module mojo {

struct KeyData {
  int32 key_code;
  bool is_char;
};

struct TouchData {
  int32 pointer_id;
};

struct Event {
  int32 action;
  int32 flags;
  int64 time_stamp;
  Point location;
  KeyData key_data;
  TouchData touch_data;
};

[Client=NativeViewportClient]
interface NativeViewport {
  Create(Rect bounds);
  Show();
  Hide();
  Close();
  SetBounds(Rect bounds);
  CreateGLES2Context(handle<message_pipe> gles2_client);
};

interface NativeViewportClient {
  OnCreated();
  OnBoundsChanged(Rect bounds);
  OnDestroyed();
  OnEvent(Event event) => ();
};

}
