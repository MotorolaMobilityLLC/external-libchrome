__doc__ = """
Configuration for building base_unittests{,.exe}.
"""

Import('env')

env = env.Clone()

if env.Bit('windows'):
  env.Append(
      LINKFLAGS = [
          '/SUBSYSTEM:WINDOWS',
      ],
  )

env.ChromeProgram('debug_message', ['debug_message.cc'])
